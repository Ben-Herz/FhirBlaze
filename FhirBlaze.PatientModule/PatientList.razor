@page "/patient"
@using FhirBlaze.SharedComponents

<div class="container">
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#">Patients</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <button @onclick="ToggleCreate" class="btn btn-primary">@(ShowCreate?"Cancel": "Add Patient")</button>
                <button @onclick="ToggleSearch" class="btn btn-primary">@(ShowSearch?"Cancel": "Search Patient")</button>
            </li>
        </ul>
    </nav>
    <div class="container">
                @if (ShowCreate)
                {
                    <PatientCreate Patient="DraftPatient" Processing="@ProcessingCreate" CreatePatient="CreatePatient" />
                   
                }

                @if (ShowSearch)
                {
                     <PatientSearch Patient="DraftPatient" Processing="@ProcessingSearch" SearchPatient="SearchPatient" />
                }

        <br/>
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Name Count</th>
                            <th>Address</th>
                            <th>Address Count</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var patient in Patients)
                        {
                            <tr @onclick="@(e => PatientSelected(e, patient))" >
                                <td>@patient.Name.FirstOrDefault()</td>
                                <td>@patient.Name.Count()</td>
                                <td>@patient.Address.FirstOrDefault()</td>
                                <td>@patient.Address.Count()</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-4">
                    @if (SelectedPatient?.Id != null)
                    { 
                    <div class="card border-primary mb-3">
                        <h5 class="card-header">@SelectedPatient.Name.FirstOrDefault() - (@SelectedPatient.Gender)</h5>
                        <div class="card-body">
                            <p class="card-text">
                                Address: @SelectedPatient.Address.FirstOrDefault()
                                <br />
                                Phone: @SelectedPatient.Telecom.FirstOrDefault()
                                <br />
                                Date of Birth: @SelectedPatient.BirthDate
                                <br />
                                Email: @SelectedPatient.Contact.FirstOrDefault()
                            </p>
                            <button type="button" class="btn btn-primary">Active: @SelectedPatient.Active</button>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
        <br />
        <h3>Found: @Patients.Count patients!</h3>

        <!--<FhirBlaze.SharedComponents.LoadingSpinner />-->
    </div>
</div>

