@using Hl7.Fhir.Model

<div class="border border-primary rounded-left">
	<div class="row">
		<div class="form-group">
			<label class="control-label col-sm-2" for="Use">Use</label>
			<div class="col-sm-10">
				<select id="Use" @bind="HumanName.Use">
					<option value="Usual">Usual</option>
					<option value="Official">Official</option>
					<option value="Temp">Temp</option>
					<option value="Nickname">Nickname</option>
					<option value="Anonymous">Anonymous</option>
					<option value="Old">Old</option>
					<option value="Maiden">Maiden</option>
				</select>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<label class="control-label col-sm-2" for="Text">Text</label>
			<div class="col-sm-10">
				<input id="Text" type="text" @bind="HumanName.Text" placeholder="Text representation of the name" />
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<label class="control-label col-sm-2" for="Prefix">Prefix</label>
			<div class="col-sm-4">
				<input id="Prefix" type="text" @bind="Prefix" placeholder="List of name prefixes (comma-separated)" />
			</div>
		</div>
	
		<div class="form-group">
			<label class="control-label col-sm-2" for="Given">Given</label>
			<div class="col-sm-4">
				<input id="Given" type="text" @bind="Given" placeholder="List of given names (comma-separated)" />
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<label class="control-label col-sm-2" for="Family">Family</label>
			<div class="col-sm-4">
				<input id="Family" type="text" @bind-value="HumanName.Family" placeholder="Family" />
			</div>
		</div>
	
		<div class="form-group">
			<label class="control-label col-sm-2" for="Suffix">Suffix</label>
			<div class="col-sm-4">
				<input id="Suffix" type="text" @bind="Suffix" placeholder="List of name suffixes (comma-separated)" />
			</div>
		</div>
	</div>	
	
	<div class="row">
		<div class="col-sm-12">
			<PeriodComponent Period="HumanName.Period" />
		</div>
	</div>
</div>