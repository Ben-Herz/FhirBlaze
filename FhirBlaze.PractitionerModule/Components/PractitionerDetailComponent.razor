@namespace FhirBlaze.PractitionerModule.Components

<EditForm Model="@SelectedPractitioner" OnValidSubmit="@SavePractitioner">
	<DataAnnotationsValidator />
	<ValidationSummary />

    <div class="container">
        <div class="row">
	        <div class="form-group">
		        <label class="col-sm-2 control-label" for="Id">Id</label>
		        <InputText id="Id" disabled @bind-Value="SelectedPractitioner.Id" class="col-sm-4" style="width: 150px;" />
	        </div>
	        <div class="form-group">
		        <label class="col-sm-2 control-label">Identifier(s)</label>
		        @foreach(var item in this.SelectedPractitioner.Identifier)
		        {
                    <div class="col-sm-4">
    			        <input type="text" @bind="item.Value" />
                    </div>
		        }
	        </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">Active</label>
                <InputCheckbox @bind-Value="this.Active" class="col-sm-2" />
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Gender</label>
                <InputSelect required @bind-Value="this.Gender" class="col-sm-2" style="width: 150px;">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                    <option value="Unknown">Unknown</option>
                </InputSelect>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Birth Date</label>
                <div class="col-sm-2">
                    <InputDate @bind-Value="BirthDate" />
                </div>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-11">Name(s)</div>
            <div class="col-sm-1">
                <button class="btn btn-primary" @onclick="AddHumanName"><span class="oi oi-plus" /></button>
            </div>
        </div>
        <div class="row">
            @foreach(var name in this.SelectedPractitioner.Name)
            {
                <div class="col-sm-11">
                    <HumanNameComponent HumanName="name" />
                </div>
                <div class="col-sm-1">
                    <button class="btn btn-primary" @onclick="(() => RemoveHumanName(name))">
                        <span class="oi oi-trash" />
                    </button>
                </div>
            }
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-11">Address(es)</div>
            <div class="col-sm-1">
                <button class="btn btn-primary" @onclick="AddAddress"><span class="oi oi-plus" /></button>
            </div>
        </div>
        <div class="row">
            @foreach(var address in this.SelectedPractitioner.Address)
            {
                <div class="col-sm-11">
                    <AddressComponent Address="address" />
                </div>
                <div class="col-sm-1">
                    <button class="btn btn-primary" @onclick="(() => RemoveAddress(address))">
                        <span class="oi oi-trash" />
                    </button>
                </div>
            }
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-11">Telecom(s)</div>
            <div class="col-sm-1">
                <button class="btn btn-primary" @onclick="AddTelecom"><span class="oi oi-plus" /></button>
            </div>
        </div>
        <div class="row">
            @foreach(var telecom in this.SelectedPractitioner.Telecom)
            {
                <div class="col-sm-11">
                    <ContactPointComponent ContactPoint="telecom" />
                </div>
                <div class="col-sm-1">
                    <button class="btn btn-primary" @onclick="(() => RemoveTelecom(telecom))">
                        <span class="oi oi-trash" />
                    </button>
                </div>
            }
        </div>

        <hr />

        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">Photo(s)</label>

            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">Qualification(s)</label>

            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">Communication(s)</label>

            </div>
        </div>
    </div>

	@if (Processing)
	{
		<button type="button" class="btn btn-primary-outline" disabled>Processing</button>
	}
	else
	{
		<button type="submit" class="btn btn-primary">Save</button>
	}
</EditForm>
