<div class="border border-primary rounded-left">
	<div class="row">
		<div class="form-group">
			<label for="Rank" class="form-label col-sm-2">Rank</label>
			<div class="col-sm-2">
				<input id="Rank" type="number" @bind="ContactPoint.Rank" />
			</div>
		</div>
		<div class="form-group">
			<label for="Use" class="form-label col-sm-2">Use</label>
			<div class="col-sm-2">
				<select id="Use" @bind="this.Use">
					<option value="Home">Home</option>
					<option value="Work">Work</option>
					<option value="Temp">Email</option>
					<option value="Old">Old</option>
					<option value="Mobile">Mobile</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="System" class="form-label col-sm-2">System</label>
			<div class="col-sm-2">
				<select id="System" @bind="this.System">
					<option value="Phone">Phone</option>
					<option value="Fax">Fax</option>
					<option value="Email">Email</option>
					<option value="Pager">Pager</option>
					<option value="Sms">SMS</option>
					<option value="Other">Other</option>
				</select>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<label for="Value" class="form-label col-sm-2">Value</label>
			<div class="col-sm-10">
				<input id="Value" type="text" @bind="ContactPoint.Value" />
			</div>
		</div>
	</div>
	
	<div class="row">
		<div class="col-sm-12">
			<PeriodComponent Period="ContactPoint.Period" />
		</div>
	</div>
</div>
